<div class="container">
  <h1>New Game</h1>
  <div class="generated-letters mb-3">
    <% @letters.each do |letter| %>
      <span class="letter"><%= letter %></span>
    <% end  %>
  </div>

  <div class="user-input">
    <p>What is the longest word you can find?</p>
    <form action="/score" class="form-inline" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <input class="form-control" type="text" name="answer">
      <input class="form-control btn btn-primary" type="submit" value="Play">
    </form>
  </div>

</div>
